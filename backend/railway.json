{
    "$schema": "https://railway.app/railway.schema.json",
    "build": {
        "builder": "RAILPACK",
        "buildCommand": "pip install -r requirements.txt"
    },
    "deploy": {
        "startCommand": "/bin/sh -c \"alembic upgrade head && python -m uvicorn app.main:app --host 0.0.0.0 --port $PORT\""
    }
}
